<div class=" form-container">
  <div class=" form-card">
    <!-- ヘッダー -->
    <div>
      <h2 class="text-center text-3xl font-bold text-gray-900">
        新規登録
      </h2>
      <p class="mt-2 text-center text-sm text-gray-600">
        アカウントを作成してください
      </p>
    </div>

    <!-- フォーム -->
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-8 space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- ニックネームフィールド -->
      <div>
        <%= f.label :name, "ニックネーム", class: "form-label" %>
        <%= f.text_field :name, autofocus: true, class: "form-input" %>
      </div>

      <!-- メールアドレスフィールド -->
      <div>
        <%= f.label :email, "メールアドレス", class: "form-label" %>
        <%= f.email_field :email, autocomplete: "email", class: "form-input" %>
      </div>

      <!-- パスワードフィールド -->
      <div>
        <%= f.label :password, "パスワード", class: "form-label" %>
        <% if @minimum_password_length %>
          <span class="text-xs text-gray-500">（<%= @minimum_password_length %>文字以上）</span>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-input" %>
      </div>

      <!-- パスワード確認フィールド -->
      <div>
        <%= f.label :password_confirmation, "パスワード（確認）", class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
      </div>

      <!-- 送信ボタン -->
      <div>
        <%= f.submit "登録する", class: "btn-primary" %>
      </div>
    <% end %>

    <!-- リンク -->
    <div class="text-center space-y-2">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>