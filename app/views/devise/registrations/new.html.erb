<div class="page-container">
  <div class="page-inner">
    <% if flash[:alert] %>
      <div class="custom-alert">
        <span class="close" onclick="this.parentElement.style.display='none';">&times;</span>
        <%= flash[:alert] %>
      </div>
    <% end %>

    <!-- タイトル -->
    <div class="form-header">
      <h1 class="page-title">新規登録</h1>
      <p class="page-explanation">アカウントを作成してください</p>
    </div>

    <div class= "form-container">
      <!-- OAuth ボタン -->
      <div class="oauth-button-container">
        <%= render 'devise/shared/google_login_button', button_text: 'Googleでアカウント登録' %>
        <!-- 他の OAuth ボタンを追加する場合はここに -->
      </div>

      <!-- 区切り線 -->
      <div class="divider"></div>

      <!-- フォーム -->
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- ニックネームフィールド -->
        <div class="form-field">
          <%= f.label :name, "ニックネーム", class: "form-label" %>
          <%= f.text_field :name, autofocus: true, class: "form-input" %>
        </div>

        <!-- メールアドレスフィールド -->
        <div class="form-field">
          <%= f.label :email, "メールアドレス", class: "form-label" %>
          <%= f.email_field :email, autocomplete: "email", class: "form-input" %>
        </div>

        <!-- パスワードフィールド -->
        <div class="form-field">
          <%= f.label :password, "パスワード", class: "form-label" %>
          <% if @minimum_password_length %>
            <span class="field-hint">（<%= @minimum_password_length %>文字以上）</span>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-input" %>
        </div>

        <!-- パスワード確認フィールド -->
        <div class="form-field">
          <%= f.label :password_confirmation, "パスワード（確認）", class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
        </div>

        <!-- 送信ボタン -->
        <%= f.submit "登録する", class: "btn-primary" %>

        <!-- リンク -->
        <div class="form-links">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>