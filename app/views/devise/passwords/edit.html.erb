<div class="page-container">
  <div class="page-inner">
    <!-- タイトル -->
    <div class="form-header">
      <h1 class="page-title">パスワード変更</h1>
      <p class="page-explanation">
        新しいパスワードを入力してください。
      </p>
    </div>

    <!-- フォーム -->
    <%= form_with model: resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-container' } do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <!-- 新しいパスワードフィールド -->
      <div class="form-field">
        <%= f.label :password, "新しいパスワード", class: "form-label" %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-input", placeholder: "新しいパスワードを入力" %>
        <% if @minimum_password_length %>
          <p class="field-hint"><%= @minimum_password_length %>文字以上</p>
        <% end %>
      </div>

      <!-- 新しいパスワード(確認)フィールド -->
      <div class="form-field">
        <%= f.label :password_confirmation, "新しいパスワード（確認用）", class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input", placeholder: "もう一度入力してください" %>
      </div>

      <!-- 更新ボタン -->
      <div class="btn-section">
        <%= f.submit "パスワードを変更する", class: "btn-primary" %>
      </div>
    <% end %>

    <!-- リンク -->
    <div class="form-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>