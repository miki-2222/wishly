<header class="bg-gray-800 text-white p-4">
  <div class="container mx-auto flex justify-between items-center">
    <h1 class="text-2xl font-bold">
      <%= link_to "GoodsPlanner", root_path, class: "hover:text-gray-300" %>
    </h1>

    <nav>
      <% if user_signed_in? %>
        <!-- ログイン中の表示 -->
        <div class="flex items-center gap-4">
          <span>ようこそ、<%= current_user.name %>さん</span>
          <%= link_to "アイテム登録", new_item_path, class: "hover:text-gray-300" %>
          <%= link_to "アイテム一覧", items_path, class: "hover:text-gray-300" %>
          <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "hover:text-gray-300" %>
        </div>
      <% else %>
        <!-- 非ログイン時の表示 -->
        <div class="flex items-center gap-4">
          <%= link_to "ログイン", new_user_session_path, class: "hover:text-gray-300" %>
          <%= link_to "新規登録", new_user_registration_path, class: "hover:text-gray-300" %>
        </div>
      <% end %>
    </nav>
  </div>
</header>